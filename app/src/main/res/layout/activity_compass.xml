<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/gradient_bg"
	>

	<ImageView
		android:id="@+id/waves"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:adjustViewBounds="true"
		android:src="@drawable/compass_white_waves"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@+id/bottomNavigationView"
		android:orientation="vertical"
		>

		<!--top - blank-->
		<View
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			/>

		<!--compass views-->
		<FrameLayout
			android:id="@+id/compassFrame"
			android:layout_width="360dp"
			android:layout_height="360dp"
			>

			<com.oheuropa.android.ui.compass.CompassWaveView
				android:id="@+id/compassWaveView"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				/>

			<com.oheuropa.android.ui.compass.CompassView
				android:id="@+id/compassView"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				/>
		</FrameLayout>

		<!--text-centered-->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="center"
			>

			<TextView
				android:id="@+id/statusText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="@string/finding_beacon"
				android:textColor="@color/text_dark"
				/>
		</LinearLayout>
	</LinearLayout>

	<include
		android:id="@id/bottomNavigationView"
		layout="@layout/bottom_navigation"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		/>
</RelativeLayout>