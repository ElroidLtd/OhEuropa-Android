<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	android:id="@+id/compassWaves"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	tools:showIn="@layout/activity_start"
	>

	<ImageView
		android:id="@+id/waves"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:adjustViewBounds="true"
		android:src="@drawable/start_white_waves"
		/>

	<!--bubble 1-->
	<android.support.constraint.Guideline
		android:id="@+id/left_guideline1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent=".01"
		/>

	<android.support.constraint.Guideline
		android:id="@+id/bottom_guideline1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent=".5"
		/>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline1"
		app:layout_constraintLeft_toLeftOf="@+id/left_guideline1"
		app:srcCompat="@drawable/bubble_yellow"
		/>


	<!--bubble 2-->
	<android.support.constraint.Guideline
		android:id="@+id/left_guideline2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent=".24"
		/>

	<android.support.constraint.Guideline
		android:id="@+id/bottom_guideline2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent=".2"
		/>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline2"
		app:layout_constraintLeft_toLeftOf="@+id/left_guideline2"
		app:srcCompat="@drawable/bubble_yellow"
		/>

	<!--bubble 3-->
	<android.support.constraint.Guideline
		android:id="@+id/left_guideline3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.4"
		/>

	<android.support.constraint.Guideline
		android:id="@+id/bottom_guideline3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent=".66"
		/>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline3"
		app:layout_constraintLeft_toLeftOf="@+id/left_guideline3"
		app:srcCompat="@drawable/bubble_yellow"
		/>

	<!--bubble 4-->
	<android.support.constraint.Guideline
		android:id="@+id/left_guideline4"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.63"
		/>

	<android.support.constraint.Guideline
		android:id="@+id/bottom_guideline4"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent=".34"
		/>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline4"
		app:layout_constraintLeft_toLeftOf="@+id/left_guideline4"
		app:srcCompat="@drawable/bubble_yellow"
		/>

	<!--bubble 5-->
	<android.support.constraint.Guideline
		android:id="@+id/left_guideline5"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.95"
		/>

	<android.support.constraint.Guideline
		android:id="@+id/bottom_guideline5"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent=".68"
		/>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline5"
		app:layout_constraintLeft_toLeftOf="@+id/left_guideline5"
		app:srcCompat="@drawable/bubble_yellow"
		/>


	<!--title-->
	<android.support.constraint.Guideline
		android:id="@+id/left_guideline"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent=".12"
		/>

	<android.support.constraint.Guideline
		android:id="@+id/right_guideline"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent=".88"
		/>

	<TextView
		android:id="@+id/title"
		style="@style/Title"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:gravity="center"
		android:lines="1"
		android:text="@string/info_title"
		android:textColor="@color/text_light"
		android:textSize="45sp"
		app:autoSizeMaxTextSize="72sp"
		app:autoSizeTextType="uniform"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="@id/left_guideline"
		app:layout_constraintRight_toRightOf="@id/right_guideline"
		app:layout_constraintTop_toTopOf="parent"
		tools:ignore="MissingPrefix"
		/>


</android.support.constraint.ConstraintLayout>